@model Course
<h3>Yeni ders oluştur</h3>
<hr>
<div class="row mt-3 col-md-4">
<form asp-controller="Course" asp-action="Create" method="post">
        <div class="mb-3">
        <label asp-for="CourseCode" class="form-label"></label>
        <input asp-for="CourseCode" class="form-control">
    </div>
        <div class="mb-3">
        <label asp-for="CourseName" class="form-label"></label>
        <input asp-for="CourseName" class="form-control">
    </div>
    <div class="mb-3">
        <label asp-for="InstructorId" class="form-label">Öğretim Elemanı</label>
        <select asp-for="InstructorId" asp-items="ViewBag.Instructors" class="form-control">
            <option value="">Seçiniz</option>
        </select>
    </div>
    
    <input type="hidden" asp-for="CoursePoint" value="0">

    <button type="submit" class="btn btn-secondary">Kaydet</button>
</form>
</div>
